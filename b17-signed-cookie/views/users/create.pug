extends ../layout/common

block content
  .text-center.mt-3
    h1 Create New User
  
  if errors
    each error in errors
      .alert.alert-danger= error
  
  
  form(action="/users/create", method="POST")
    label(for="name") Name:
    input#name.form-control(type="text", name="name", value=values ? values.name : "")
    label(for="phone") Phone:
    input#phone.form-control(type="text", name="phone", value=values ? values.phone : "")
    label(for="email") Email:
    input#email.form-control(type="email", name="email", value=values ? values.phone : "")
    label(for="password") Password:
    input#password.form-control(type="password", name="password", value=values ? values.phone : "")
    .text-center.mt-3  
      button.btn.btn-success  Create