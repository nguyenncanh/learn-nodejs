extends ../layout/common

block content
    .text-center.mt-3
        h1 Register
    
    if errors
        each error in errors
            .alert.alert-danger= error
    else if message
        .alert.alert-success= message

    form(action="/auth/register" method="POST", enctype="multipart/form-data")
        label(for="name") Name:
        input#name.form-control(type="text", name="name", value=values ? values.name : "")
        label(for="phone") Phone:
        input#phone.form-control(type="text", name="phone", value=values ? values.phone : "")
        label(for="email") Email:
        input#email.form-control(type="text", name="email", value=values ? values.email : "")
        label(for="password") Password:
        input#password.form-control(type="password", name="password", value=values ? values.password : "")
        label(for="confirmPass") Confirm Password:
        input#confirmPass.form-control(type="password", name="confirmPass", value=values ? values.confirmPass : "")
        label(for="avatar") Avatar:
        input#avatar.form-control-file(type="file", name="avatar")
        .text-center.mt-3  
            button.btn.btn-success  Register