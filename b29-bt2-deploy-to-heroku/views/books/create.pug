extends ../layout/common

block content
  .text-center.mt-3
    h1 Create New Book
  
  if errors
    each error in errors
      .alert.alert-danger= error
  
  
  form(action="/books/create", method="POST", enctype="multipart/form-data")
    label(for="title") Title:
    input#title.form-control(type="text", name="title", , value=values ? values.title : "")
    label(for="des") Description:
    input#des.form-control(type="text", name="des", value=values ? values.des : "")
    label(for="shopName") Shop name:
    input#shopName.form-control(type="text", name="shopName", , value=values ? values.shopName : "")
    label(for="avatar") Avatar:
    input#avatar.form-control-file(type="file", name="avatar")
    .text-center.mt-3
      button.btn.btn-success Create