html
  head
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
    link(rel='icon', href='https://cdn.glitch.com/190b032a-a75e-4ae1-b800-6bf3529bfc0f%2Ffavicon.png?v=1588261634075')
    link(rel='stylesheet', type='text/css', href='/custom.css')
    script(src='/script.js')
  body
    .container-fluid
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/') Logo
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            if(!user)
              li.nav-item
                a.nav-link(href='/')
                  | Home 
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href='/products') Products
              li.nav-item
                a.nav-link(href='/transactions') Transactions
              li.nav-item
                a.nav-link(href='/shops') Shops
            else
              if (user.isAdmin === true)
                li.nav-item
                  a.nav-link(href='/')
                    | Home 
                    span.sr-only (current)
                li.nav-item
                  a.nav-link(href='/products') Products
                li.nav-item
                  a.nav-link(href='/books') Books
                li.nav-item
                  a.nav-link(href='/users') Users
                li.nav-item
                  a.nav-link(href='/transactions') Transactions
                li.nav-item
                  a.nav-link(href='/shops') Shops
              else
                li.nav-item
                a.nav-link(href='/')
                  | Home 
                  span.sr-only (current)
                li.nav-item
                  a.nav-link(href='/products') Products
                li.nav-item
                  a.nav-link(href='/transactions') Transactions
                li.nav-item
                  a.nav-link(href='/shops') Shops
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/cart') Cart:
              span.pl-1= countCart
          if (!user)
            li.nav-item  
              a.nav-link(href='/auth/login') Login
            li.nav-item  
              a.nav-link(href='/auth/register') Register
          else
            .dropdown
              a#dropdownMenuLink.btn.dropdown-toggle(href="#", role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= user.name
              .dropdown-menu(aria-labelledby='dropdownMenuLink')
                a.dropdown-item(href='/users/profile') Profile
                a.dropdown-item(href='/auth/logout') Logout
      script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj', crossorigin='anonymous')
      script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
      script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js', integrity='sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI', crossorigin='anonymous')
      .container
        block content