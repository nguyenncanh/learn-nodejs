extends ../layout/common

block content
  .mt-3
    .text-center
      h1 Shop List
    .d-flex.align-items-center 
      a.btn.btn-primary.mb-3(href="/shops/registerShop") Register Shop
      form.d-flex.ml-auto(action="#", method="GET")
        input.form-control(type="text", name="q", value=searchValue)
        button.btn.btn-primary.ml-2 Search
    .table-responsive    
        table.table.table-bordered.table-hover
            thead
                tr
                    th Shop Name
                    th Owner
                    th Phone
                    th Email
                    th.col-action Action
            each shop in shops
                tbody
                    tr
                        each user in users
                            if (shop.idUser === user.id) 
                                td= shop.shopName
                                td= user.name
                                td= user.phone
                                td= user.email
                                td.col-action
                                    a.btn.btn-success(href="shops/" + shop.id + "/books") Access this shop
  a(href="/") Back to Home page