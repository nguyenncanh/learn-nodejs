extends ../layout/common

block content
  .text-center.mt-3
    h1 Login
    
  if (error === "The account is temporarily locked because you have logged in more than 3 times")
    .alert.alert-danger= error
  else
    if errors
      each error in errors
        .alert.alert-danger= error


    form(method="POST")
      label(for="email") Email:
      input#email.form-control(type="text", name="email", value=values ? values.email : "")
      label(for="password") Password:
      input#password.form-control(type="password", name="password", value=values ? values.password : "")
      .text-center.mt-3  
        button.btn.btn-success  Login